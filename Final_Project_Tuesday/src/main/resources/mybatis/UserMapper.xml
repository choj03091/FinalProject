<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cjt.tuesday.mapper.UserMapper">

    <!-- 이메일로 사용자 조회 -->
    <select id="findUserByEmail" resultType="com.cjt.tuesday.dtos.UserDto">
        SELECT * FROM users WHERE email = #{email}
    </select>

    <!-- 사용자 추가 (회원가입) -->
    <insert id="addUser">
        INSERT INTO users (username, email, password, title, status, created_at)
        VALUES (#{username}, #{email}, #{password}, #{title}, #{status}, NOW())
    </insert>
</mapper>
